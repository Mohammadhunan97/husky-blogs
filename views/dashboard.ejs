<!DOCTYPE html>
<html>
<head>
	<title>Husky Blogs Dashboard</title>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
	<link rel="stylesheet" href="/css/bootstrap-tags.css">
	<link rel="stylesheet" href="/css/style.css" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<a href="/user/one/<%= user._id %>" class="navigational">Profile</a>
	<h1 class="husky-logo">
		Husky Blogs
		<br/>
		<% include ./partials/searchbutton %>
	</h1>

	<button class="btn btn-red" id="make-new-post">Make a New Post</button>
	<div class="my-new-post" id="my-new-post">
		<% include ./partials/newpost %>
	</div>
	<br/>


	<% if(errors) {%>
		<% errors.forEach((err)=>{ %>
			<p class="alert alert-danger"> <%= err %></p>
		<% }) %>
	<% } %>

	<% if(successes) {%>
		<% errors.forEach((success)=>{ %>
			<p class="alert alert-success"> <%= success %></p>
		<% }) %>
	<% } %>

	<% user.posts.forEach((post) =>{ %>
		<hr/>
		<div class="following-post">
			<div class="following-user">
				<br/>
				<br/>
				<p>Posted By</p>
				<img src=<%= post.bloggerpic%> class="user-image"/>
				<a href="/user/one/<%= post.original_poster.id %>"><%= post.original_poster.username %></a>
				<br/>
				<button class="btn">Reblog This Post</button>
			</div>
			<div class="user-post">
				<h3><%= post.title%></h3>
				<img src=<%= post.image %> class="post-image" />
				<p class="post-description"><%= post.description %></p>
				<% post.tags.forEach((tag) => { %>
				<p class="post-tags">
					<a href="/user/explore/<%= tag %>" target="_blank"><%= tag %></a>
				</p>
				<% }) %>
			</div>
		</div>
		<hr/>
	<% })%>

	<script type="text/javascript" src="/js/jquery.js"></script>
	<script src="/js/bootstrap-tags.js"></script>
	<script type="text/javascript" src="/js/searchforimages.js"></script>
	<script type="text/javascript" src="/js/dashboard.js"></script>
</body>
</html>