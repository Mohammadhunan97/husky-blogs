<form action="/localuser/new" method="POST" class="loginform flip-vertical-left">
	<h3 class="signup-header">Sign Up:</h3>
	<div class="form-group">
		<label for="username">username:</label>
		<input type="text" name="username" placeholder="username" id="username" class="form-control"/>
		<br/>
  	</div>

  	<div class="form-group">
		<label for="email">email:</label>
		<input type="text" name="email" placeholder="email" id="email" class="form-control" />
		<br/>
		<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
	</div>

	<div class="form-group">
		<label for="password">password:</label>
		<input type="password" name="password" placeholder="password" id="password" class="form-control"/>
		<br/>
	</div>

	<div class="form-group">
		<label for="password2">retype your password:</label>
		<input type="password" name="password2" placeholder="retype your password" id="password2" class="form-control"/>
		<br/>
	</div>

	<div class="form-group">
		<label for="profile_pic">Paste a link to an image you want <br/> to use as your profile picture:</label>
		<input type="text" name="profile_pic" placeholder="url of your profile picture" id="profile_pic" class="form-control"/>
		<br/>
	</div>




	<input type="submit" class="btn btn-primary" />
</form>